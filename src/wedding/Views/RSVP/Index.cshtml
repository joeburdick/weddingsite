            <label asp-for="Salmon" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Salmon" class="form-control" value="0"/>
                <span asp-validation-for="Salmon" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
